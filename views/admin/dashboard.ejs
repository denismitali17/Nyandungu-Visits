<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bookings</title>
  </head>
  <body>
    <%- include('../partials/navigation.ejs') %>

    <div class="row justify-content-center">
      <h2>Bookings</h2>
      <a href="/admin/logout">Logout</a>
      <table border="1">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Visit Date</th>
            <th>Ticket Type</th>
            <th>Time Slot</th>
          </tr>
        </thead>
        <tbody>
          <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.id %></td>
            <td><%= booking.name %></td>
            <td><%= booking.email %></td>
            <td><%= booking.visitDate %></td>
            <td><%= booking.ticketType %></td>
            <td><%= booking.timeSlot %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
