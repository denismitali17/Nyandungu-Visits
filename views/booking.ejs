<!DOCTYPE html>
<html lang="en">
  <%- include('partials/navigation.ejs') %>

  <div class="container my-5">
    <div class="text-center mb-4">
      <h2>Book Your Visit</h2>
      <p>Plan your visit to the beautiful Nyandungu Eco-Park</p>
    </div>

    <form class="booking-form">
      <div class="form-group">
        <label for="name">Full Name</label>
        <input
          type="text"
          id="name"
          class="form-control"
          placeholder="Enter your full name"
          required
        />
      </div>

      <div class="form-group">
        <label for="email">Email Address</label>
        <input
          type="email"
          id="email"
          class="form-control"
          placeholder="Enter your email"
          required
        />
      </div>

      <div class="form-group">
        <div class="mb-3 mb-md-0">
          <div class="date" id="date2" data-target-input="nearest"></div>
          <label for="visit-date">Visit Date</label>
          <input
            type="text"
            id="visit-date"
            class="form-control date"
            placeholder="Select your visit date"
            required
          />
        </div>
      </div>

      <div class="form-group">
        <label for="ticket-type">Ticket Type</label>
        <select id="ticket-type" class="form-control">
          <option value="standard">Standard Ticket</option>
          <option value="student">Student Ticket</option>
          <option value="senior">VIP Ticket</option>
        </select>
      </div>

      <div class="form-group">
        <div class="mb-3 mb-md-0">
          <select class="custom-select px-4" style="height: 47px">
            <option selected>Time Slots</option>
            <option value="1">9AM-12PM</option>
            <option value="2">12PM-3PM</option>
            <option value="3">3PM-6PM</option>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-primary py-3 px-4 mt-3">
        Book Now
      </button>
    </form>
  </div>

  <%- include('partials/footer.ejs') %> <%- include('partials/footer.ejs') %>
  <%- include('partials/footer.ejs') %>
</html>
